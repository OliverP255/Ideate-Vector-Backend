# Knowledge Map Environment Configuration

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=knowledge_map
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password

# Vector Database (Qdrant)
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=

# Redis (for caching and job queues)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Object Storage (MinIO for S3-compatible storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=knowledge-map

# GROBID Service
GROBID_HOST=grobid
GROBID_PORT=8070

# OpenAI Configuration (optional - for embeddings)
OPENAI_API_KEY=
OPENAI_MODEL=text-embedding-3-large

# Local Embedding Model (fallback)
SENTENCE_TRANSFORMERS_MODEL=all-MiniLM-L12-v2

# Application Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_PORT=3000

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Feature Flags
USE_OPENAI_EMBEDDINGS=false
USE_PARAMETRIC_UMAP=true
ENABLE_USER_OVERLAY=true
